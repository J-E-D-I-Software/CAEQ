extends baseEmail

block content
  h2 Hola Arq. #{firstName},
  p Conoce el nuevo curso que se ha creado en el Colegio de Arquitectos del Estado de Querétaro.
  hr
  h3 #{courseName}
  p Modalidad: #{courseModality} | 
  p Fechas: Del #{courseStartDate} al #{courseEndDate}
  p Horario de las clases: #{courseSchedule}
  p Descripción del curso:
  p #{courseDescription}
  img(src=`${courseImageUrl}`)